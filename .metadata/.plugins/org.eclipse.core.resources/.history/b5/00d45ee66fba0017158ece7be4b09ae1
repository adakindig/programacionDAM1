
public class Ejercicio12 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 12.-Hacer un pseudocódigo que imprima los números del 1 al 100.Que calcule la suma de
		// todos los números pares por un lado, y por otro,la de todos los impares. 

		int contador = 1, totalpar = 0, totalimpar = 2;
		while (contador >= 100){
			contador++;
			
			if ( (contador%2) == 0 ){
				System.out.println(totalpar);
			}
			else {
				System.out.println(totalimpar);
			}
		}
	}
}